{
    "version": "0.2.0",
    "configurations": [
        {
            "type": "fs-uae",
            "request": "launch",
            "name": "FS-UAE Debug",
            "stopOnEntry": false,
            "serverName": "localhost",
            "serverPort": 6860,
            "trace": false,
            "startEmulator": true,
            "buildWorkspace": true,
            "windows": {
                "emulator": "${workspaceFolder}/bin/fs-uae.exe",
            },
            "osx": {
                "emulator": "${workspaceFolder}/bin/fs-uae",
            },
            "linux": {
                "emulator": "${workspaceFolder}/bin/fs-uae",
            },
            "emulatorWorkingDir": "${workspaceFolder}/bin",
            "program": "${workspaceFolder}/uae/dh0/prog",
            "options": [
                "--chip_memory=2048",
                "--fast_memory=4096",
                "--hard_drive_0=${workspaceFolder}/uae/dh0",
                "--joystick_port_1=none",
                "--amiga_model=A4000",
                //"--slow_memory=1792",
                "--remote_debugger=200",
                "--use_remote_debugger=true",
                "--automatic_input_grab=0"
            ]
        },
        {
            "type": "uae-run",
            "request": "launch",
            "name": "FS-UAE Run",
            "buildWorkspace": true,
            "emulator": "${workspaceFolder}/bin/fs-uae",
            "windows": {
                "emulator": "${workspaceFolder}/bin/fs-uae.exe",
            },
            "osx": {
                "emulator": "${workspaceFolder}/bin/fs-uae",
            },
            "linux": {
                "emulator": "${workspaceFolder}/bin/fs-uae",
            },
            "emulatorWorkingDir": "${workspaceFolder}/bin",
            "options": [
                "--chip_memory=2048",
                "--fast_memory=4096",
                "--hard_drive_0=${workspaceFolder}/uae/dh0",
                "--joystick_port_1=none",
                "--amiga_model=A4000"
                //"--slow_memory=1792"
            ]
        }
    ]
}